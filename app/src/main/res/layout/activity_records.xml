<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecordsFragment"
    android:background="@drawable/leaderboard_background">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/records_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.69"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685"
        app:layout_constraintWidth_percent="0.403"
        />
    <include
        layout="@layout/recyclerview_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.69"
        app:layout_constraintWidth_percent="0.403"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintVertical_bias="0.685"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/return_menu"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_menu"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.07"
        />

</androidx.constraintlayout.widget.ConstraintLayout>