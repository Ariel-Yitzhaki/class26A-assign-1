<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/img_road">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heart1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart"/>
                <ImageView
                    android:id="@+id/heart1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart"/>
                <ImageView
                    android:id="@+id/heart1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageView
                        android:id="@+id/bomb3_3"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_bomb"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/bomb4_1"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bomb"
                            android:visibility="invisible" />
                        <ImageView
                            android:id="@+id/raceCar1_1"
                            android:layout_width="wrap_content"
                            android:visibility="invisible"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_racecar"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/bomb4_2"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:src="@drawable/ic_bomb"/>
                        <ImageView
                            android:id="@+id/raceCar1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_racecar"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/bomb4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:visibility="invisible"
                            android:src="@drawable/ic_bomb"/>
                        <ImageView
                            android:id="@+id/raceCar1_3"
                            android:layout_width="wrap_content"
                            android:visibility="invisible"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_racecar"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:gravity="center_vertical|bottom"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/leftArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_arrow"
                        app:iconSize="60dp"
                        app:backgroundTint="#0000FF"
                        app:cornerRadius="50dp"
                        app:iconPadding="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/rightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="180"
                        app:icon="@drawable/ic_arrow"
                        app:iconSize="60dp"
                        app:cornerRadius="50dp"
                        app:backgroundTint="#0000FF"
                        app:iconPadding="0dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>